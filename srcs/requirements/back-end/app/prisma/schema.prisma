// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models

model FriendRequest {
    id Int @id @default(autoincrement()) @unique

    createdAt DateTime @default(now())

    origin_list FriendRequestList @relation(fields: [listId], references: [id])
    listId Int @unique

    id_user Int

    @@map("friendRequest")
} 

model FriendRequestList {
    id Int @id @default(autoincrement()) @unique
    
    author User @relation(fields: [authorId], references: [id])
    authorId Int @unique

    list FriendRequest[] 

    @@map("friendRequestList")
}

model User {
    
    id Int @id @default(autoincrement()) @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    login String @unique
    first_name String?
    last_name String?
    avatar_url String?
    email String @unique
    state Boolean @default(false) // true - inactive, false - active,
    // lastActivity DateTime? // last activity date
    password String

    friend_requests FriendRequestList? @relation(fields: [friend_req_id], references: [])
    friend_req_id Int @unique

    @@map("users")
}



