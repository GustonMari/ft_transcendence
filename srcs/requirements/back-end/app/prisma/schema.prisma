generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Models

model Relation {
    id Int @id @unique @default(autoincrement())

    created_at DateTime @default(now())

    state RELATION_STATE 

    from User @relation("outgoing", fields: [from_id], references: [id])
    from_id Int

    to User @relation("incoming", fields: [to_id], references: [id])
    to_id Int

    @@map("friend_request")
}

model Chat_Relation {
    id Int @id @unique @default(autoincrement())

    created_at DateTime @default(now())

    state RELATION_STATE 

   

    @@map("chat_request")
}

model User {
    id         Int      @id @unique @default(autoincrement())
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
    login      String   @unique
    first_name String?
    last_name  String?
    avatar_url String?
    email      String   @unique
    state      Boolean  @default(false) // true - inactive, false - active,
    // lastActivity DateTime? // last activity date
    password   String   @default(cuid())
    rt         String?

    incoming Relation[]    @relation("incoming")
    outgoing Relation[]    @relation("outgoing")

    rooms UsersOnRooms[]
    // roles Role[]
    @@map("users")
}

