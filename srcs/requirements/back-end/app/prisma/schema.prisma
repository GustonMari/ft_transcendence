// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Models

model FriendRequest {
    id Int @id @unique @default(autoincrement())

    created_at DateTime @default(now())

    from User @relation("fri_req_outgoing", fields: [from_id], references: [id])
    from_id Int

    to User @relation("fri_req_incoming", fields: [to_id], references: [id])
    to_id Int

    @@map("friend_request")
}

model User {
    id         Int      @id @unique @default(autoincrement())
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
    login      String   @unique
    first_name String?
    last_name  String?
    avatar_url String?
    email      String   @unique
    state      Boolean  @default(false) // true - inactive, false - active,
    // lastActivity DateTime? // last activity date
    password   String   @default(cuid())

    fri_req_incoming FriendRequest[]    @relation("fri_req_incoming")
    fri_req_outgoing FriendRequest[]    @relation("fri_req_outgoing")

    @@map("users")
}

enum Role {
    ADMIN
    USER
}

enum State {
    ONLINE
    OFFLINE
}
