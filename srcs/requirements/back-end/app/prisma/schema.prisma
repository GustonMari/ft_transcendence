// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models

model FriendRequest {
  id Int @id @unique @default(autoincrement())

  createdAt DateTime @default(now())

  origin_list FriendRequestList @relation(fields: [list_id], references: [id_frl])
  list_id     Int               @unique

  id_user Int

  @@map("friend_request")
}

model FriendRequestList {
  id_frl Int @id @unique @default(autoincrement())

  author    User @relation(fields: [author_id], references: [id])
  author_id Int  @unique

  list FriendRequest[]

  @@map("friend_request_list")
}

model User {
  id         Int      @id @unique @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  login      String   @unique
  first_name String?
  last_name  String?
  avatar_url String?
  email      String   @unique
  state      Boolean  @default(false) // true - inactive, false - active,
  // lastActivity DateTime? // last activity date
  password   String   @default(cuid())

  friend_requests FriendRequestList?

  

  @@map("users")
}

enum Role {
  ADMIN
  USER
}

enum State {
  ONLINE
  OFFLINE
}
